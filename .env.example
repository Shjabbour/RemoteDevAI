# ====================================================================
# RemoteDevAI Environment Configuration
# ====================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# ====================================================================

# ====================================================================
# SERVER CONFIGURATION
# ====================================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:19006

# ====================================================================
# DATABASE
# ====================================================================
# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/remotedevai
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/remotedevai

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================================================
# AUTHENTICATION & SECURITY
# ====================================================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption key (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Password hashing
BCRYPT_ROUNDS=12

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# ====================================================================
# AI/LLM API KEYS
# ====================================================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-opus-4-5-20251101
ANTHROPIC_MAX_TOKENS=4096

# OpenAI (GPT-4)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Google AI (Gemini)
GOOGLE_AI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_AI_MODEL=gemini-2.0-flash-exp
GOOGLE_AI_MAX_TOKENS=4096

# Cohere (optional)
COHERE_API_KEY=your-cohere-api-key
COHERE_MODEL=command-r-plus

# Hugging Face (optional)
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ====================================================================
# VOICE PROCESSING
# ====================================================================
# Google Cloud Speech-to-Text & Text-to-Speech
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Voice settings
DEFAULT_VOICE=en-US-Neural2-D
SPEAKING_RATE=1.0
PITCH=0.0
VOICE_LANGUAGE=en-US

# Alternative: OpenAI Whisper + TTS
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_TTS_MODEL=tts-1-hd
OPENAI_TTS_VOICE=alloy

# Alternative: ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# ====================================================================
# CLOUD STORAGE
# ====================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=remotedevai-storage

# Google Cloud Storage (alternative)
GCS_BUCKET=remotedevai-storage
GCS_PROJECT_ID=your-gcs-project-id

# ====================================================================
# WEBSOCKET
# ====================================================================
WEBSOCKET_PORT=3002
WEBSOCKET_PATH=/ws
WEBSOCKET_CORS_ORIGIN=*

# ====================================================================
# PUSH NOTIFICATIONS
# ====================================================================
# Firebase Cloud Messaging (for mobile push)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# Expo Push Notifications (alternative)
EXPO_ACCESS_TOKEN=your-expo-access-token

# ====================================================================
# EMAIL
# ====================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid (alternative)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@remotedevai.com

# ====================================================================
# LOGGING & MONITORING
# ====================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (error tracking)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
SENTRY_ENVIRONMENT=development

# DataDog (monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# ====================================================================
# RATE LIMITING
# ====================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================================================
# AGENT CONFIGURATION
# ====================================================================
# Max concurrent agents
MAX_CONCURRENT_AGENTS=5

# Agent execution timeout (milliseconds)
AGENT_TIMEOUT=300000

# Max task queue size
MAX_TASK_QUEUE_SIZE=100

# ====================================================================
# MCP (Model Context Protocol)
# ====================================================================
MCP_SERVER_URL=http://localhost:3003
MCP_TOOLS_ENABLED=true
MCP_MAX_TOOL_CALLS=10

# ====================================================================
# GIT INTEGRATION
# ====================================================================
# GitHub Personal Access Token (for repository operations)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitLab Token (alternative)
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# ====================================================================
# DESKTOP AGENT
# ====================================================================
DESKTOP_AGENT_PORT=3004
DESKTOP_AGENT_SECRET=your-desktop-agent-secret-key

# ====================================================================
# MOBILE APP
# ====================================================================
# Expo configuration
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_WS_URL=ws://localhost:3002

# ====================================================================
# WEB DASHBOARD
# ====================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3002

# ====================================================================
# ANALYTICS
# ====================================================================
# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# ====================================================================
# PAYMENT (if monetizing)
# ====================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ====================================================================
# FEATURE FLAGS
# ====================================================================
ENABLE_VOICE_COMMANDS=true
ENABLE_MULTI_AGENT=true
ENABLE_FILE_OPERATIONS=true
ENABLE_GIT_OPERATIONS=true
ENABLE_TERMINAL_ACCESS=true
ENABLE_DATABASE_ACCESS=false
ENABLE_CLOUD_DEPLOYMENT=false

# ====================================================================
# DEVELOPMENT
# ====================================================================
DEBUG=false
MOCK_AI_RESPONSES=false
SKIP_AUTH=false

# ====================================================================
# PRODUCTION SETTINGS
# ====================================================================
# Set these in production environment
# FORCE_HTTPS=true
# SESSION_SECURE=true
# COOKIE_SECURE=true
# TRUST_PROXY=true

# ====================================================================
# FILE UPLOAD SYSTEM
# ====================================================================
# S3-Compatible Storage Configuration
S3_BUCKET_NAME=remotedevai-uploads
S3_ENDPOINT=  # Optional: For Cloudflare R2 or MinIO
S3_FORCE_PATH_STYLE=false  # Set to true for MinIO/R2

# CDN Configuration (optional)
CDN_URL=https://cdn.remotedevai.com

# File Processing
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_VIDEO_PROCESSING=true
ENABLE_THUMBNAIL_GENERATION=true
ENABLE_VIRUS_SCANNING=false

# Temporary directory for file processing
TEMP_DIR=/tmp
