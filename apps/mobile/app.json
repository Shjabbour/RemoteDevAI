{
  "expo": {
    "name": "RemoteDevAI",
    "slug": "remotedevai-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.remotedevai.mobile",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "RemoteDevAI needs access to your microphone for voice commands",
        "NSCameraUsageDescription": "RemoteDevAI needs access to your camera for screen recordings",
        "NSPhotoLibraryUsageDescription": "RemoteDevAI needs access to your photo library to save recordings"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.remotedevai.mobile",
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#3b82f6"
        }
      ],
      "expo-secure-store",
      "expo-av"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "remotedevai",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
