{
  "name": "@remotedevai/desktop",
  "version": "1.0.0",
  "description": "RemoteDevAI Desktop Agent - Electron app for local system control",
  "main": "./dist/main/main.js",
  "author": "RemoteDevAI",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run start\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "socket.io-client": "^4.7.2",
    "playwright": "^1.40.1",
    "fluent-ffmpeg": "^2.1.2",
    "node-pty": "^1.0.0",
    "chokidar": "^3.5.3",
    "keytar": "^7.9.0",
    "auto-launch": "^5.0.6",
    "electron-updater": "^6.1.7",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.remotedevai.desktop",
    "productName": "RemoteDevAI",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "remotedevai",
      "repo": "desktop-agent"
    }
  }
}
